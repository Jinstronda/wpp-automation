{
  "name": "wpp-automation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && node dist/server.js",
    "start": "tsc -p tsconfig.json && node dist/server.js",
    "dev": "tsc -p tsconfig.json && node dist/server.js",
    "ui": "tsc -p tsconfig.json && node dist/server.js"
  },
  "description": "WhatsApp Bulk Automation with AI - Jo√£o Panizzutti Methodology",
  "main": "dist/server.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "openai": "^5.23.1",
    "playwright": "^1.40.0",
    "playwright-ghost": "^0.7.2"
  },
  "build": {
    "appId": "com.whatsapp.automation",
    "productName": "WhatsApp Automation",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "web/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
